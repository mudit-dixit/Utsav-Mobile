<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Utsav Logo -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Utsav Logo"
            android:layout_marginBottom="16dp"/>

        <!-- Heading -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Judge"
            android:textSize="24sp"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Name Label & EditText -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/judgeNameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter full name"
            android:padding="12dp"
            android:background="#C0C0C0"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Email Label & EditText -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/judgeEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter email"
            android:padding="12dp"
            android:background="#C0C0C0"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"/>

        <!-- Phone Label & EditText -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/judgePhoneEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter phone number"
            android:padding="12dp"
            android:background="#C0C0C0"
            android:textColor="#000000"
            android:inputType="phone"
            android:layout_marginBottom="24dp"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/judgeSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5722"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>
