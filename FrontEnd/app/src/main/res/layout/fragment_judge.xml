<?xml version="1.0" encoding="utf-8"?>
<!-- Changed root to RelativeLayout to allow FAB floating -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Search and Add button LinearLayout removed -->

    <!-- RecyclerView for judges -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_judges"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_judge" />

    <!-- Note: No ProgressBar was in the original file, so none is added -->

    <!-- New Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_judge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="#FF5722"
        app:tint="@android:color/white"
        android:src="@drawable/ic_add"
        android:contentDescription="Add Judge" />

</RelativeLayout>
