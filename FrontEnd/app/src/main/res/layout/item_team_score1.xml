<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_box">

    <!-- Horizontal layout for Team Name and Score -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Team Name -->
        <TextView
            android:id="@+id/text_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <!-- Score centered vertically at the right end -->
        <TextView
            android:id="@+id/text_score_button"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/rounded_score_background"
            android:padding="8dp"
            android:text="50"
            android:textColor="#FF6B00"
            android:textSize="16sp" />

    </RelativeLayout>

    <!-- Member Count -->
    <TextView
        android:id="@+id/text_member_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 Members"
        android:textSize="14sp"
        android:textColor="#666666"
        android:paddingTop="4dp" />

</LinearLayout>